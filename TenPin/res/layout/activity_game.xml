<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tenpin.GameActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:gravity="clip_vertical" >

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >

	            <ImageView
	                android:id="@+id/Frame1"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame2"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame3"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame4"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame5"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1.4"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame6"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame7"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame8"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame9"
	                android:layout_width="90dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame1_9" />

	            <ImageView
	                android:id="@+id/Frame10"
	                android:layout_width="140dp"
	                android:layout_height="50dp"
	                android:layout_weight="1"
	                android:onClick="onClick"
	                android:scaleType="fitXY"
	                android:src="@drawable/frame10" />
	        </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="top"
        android:theme="@android:style/Theme.Holo"
        tools:context=".GameActivity" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/pin7_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin7" />

            <ImageView
                android:id="@+id/pin8_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin8" />

            <ImageView
                android:id="@+id/pin9_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin9" />

            <ImageView
                android:id="@+id/pin10_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin10" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout3"
            android:dividerPadding="@android:dimen/notification_large_icon_height"
            android:showDividers="none" >

            <ImageView
                android:id="@+id/ImageView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/pin4_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin4" />

            <ImageView
                android:id="@+id/pin5_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin5" />

            <ImageView
                android:id="@+id/pin6_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin6" />

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout4" >

            <ImageView
                android:id="@+id/ImageView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/ImageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/pin2_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin2" />

            <ImageView
                android:id="@+id/pin3_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:src="@drawable/pin3" />

            <ImageView
                android:id="@+id/ImageView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/ImageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/ImageView08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout5" >

            <ImageView
                android:id="@+id/ImageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />

            <ImageView
                android:id="@+id/pin1_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="onClick"
                android:src="@drawable/pin1" />

            <ImageView
                android:id="@+id/ImageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/screen_background_light_transparent" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom" >

        <ImageButton
            android:id="@+id/next_throw_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_weight="1"
            android:src="@drawable/next_ball_button" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/next_ball_button" />

    </LinearLayout>

</FrameLayout>


